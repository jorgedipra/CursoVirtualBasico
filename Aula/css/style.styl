$colorfondo = #000
$fondoAutivisual = url(../img/fondoVideo.jpg)
$fondoIntro = url(../img/fondotexto.png)
$colorLetraC = #597CF0
$sizeB = 40px
$sizeC = 10px
$ColorTI =white
$TipoLetra = Bradley Hand ITC

background-Size()
	-moz-background-size: cover
	-o-background-size: cover
	-webkit-background-size: cover
	background-size: cover
border-Radius()
	-moz-border-radius: $sizeB;
	-webkit-border-radius: $sizeB;
	border-radius: $sizeB;
border-RadiusSCrol()
	-moz-border-radius-bottomleft $sizeB 
	-moz-border-radius-topleft $sizeB 
	-webkit-border-bottom-left-radius $sizeB 
	-webkit-border-top-left-radius $sizeB 
	border-bottom-left-radius $sizeB 
	border-top-left-radius $sizeB 

border-RadiusScro()
	-moz-border-radius: $sizeC;
	-webkit-border-radius: $sizeC;
	border-radius: $sizeC;	

box-Shadow()	
		-moz-box-shadow:inset 0 0 6px rgba(0,0,0,0.3);
		-webkit-box-shadow:inset 0 0 6px rgba(0,0,0,0.3);
		box-shadow:inset 0 0 6px rgba(0,0,0,0.3);


body
	border 0
	margin  0
	padding 0
	height 100%	
	width 100%
	position fixed
h2
	margin-left 10%

h2,
h1
	color $ColorTI
	font-family $TipoLetra
	height 7%
	left 0
	margin-top 0
	padding-left 10px
	top 0

ul
	margin 0
	padding 0

ul 
	li
		background rgba(0,0,0,.5)
		display  inline-block
		font-size 16px
		height 50px
		padding 10px 0
		vertical-align  top	

#contenedos
	background: url(../img/fondo.jpg) no-repeat center center fixed
	background-Size()
	border 0
	margin  0
	padding 0
	height 90%	
	width 100%
	position fixed
#contenedor
	height 90%
	margin-bottom 5%
	margin-left 5%
	margin-right 5%
	margin-top 5%
	padding 0
	position absolute
	width 90%
	

#Autivisual
	background  $fondoAutivisual
	background-Size()
	border none
	height 48%
	left 0
	position absolute
	width 59%
#Autivisual			
			iframe
				height 85%
				margin-left 1%
				margin-top 8%
				position absolute
				top 0								
				width 98%
				z-index 0	

#intruductorio 
	background  $fondoIntro	
	background-Size()
	border none
	border-Radius()
	height 48%
	position absolute
	right 0
	width 39%

#intruductorio
			#texto
				color $colorLetraC
				height 85%
				margin 0 auto				
				padding-bottom 2.5px
				padding-left 2.5px
				padding-right 2.5px
				padding-top 0px
				width 85%	
.bloque
	background  $fondoIntro	
	background-Size()
	border none
	border-Radius()
	bottom 0
	color $ColorTI
	font-family $TipoLetra
	height 40%
	position absolute
	width 30%
.bloque
		article
			position absolute
			top 0
			left 0
			text-align center
			width 100%
			font-size 25px
			margin-top 45%
			
#bloque1
	left 0
#bloque1
	left 35%
#bloque3
	right 0
/*------------scroll--------*/
.scrollbar
	background #F5F5F5
	border-RadiusSCrol()
	color $colorLetraC
	height 99%
	margin 0 auto
	overflow auto
	padding-bottom 2.5px
	padding-left 2.5px
	padding-right 2.5px
	padding-top 0px
	width 100%	

.force-overflow
		min-height 450px

#style-7::-webkit-scrollbar-track
		box-Shadow()
		background-color #F5F5F5
		border-RadiusScro()


#style-7::-webkit-scrollbar
		width 10px
		background-color #F5F5F5

#style-7::-webkit-scrollbar-thumb
		background  $fondoIntro	
		border-RadiusScro()
        


